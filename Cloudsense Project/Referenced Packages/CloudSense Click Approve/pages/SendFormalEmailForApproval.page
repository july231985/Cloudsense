<apex:page controller="CSCAP.SendFormalEmailForApprovalController" title="Send Formal Email For Approval">
    <apex:form >
        <!-- <apex:pageBlockButtons >
            <apex:commandButton value="Send Email" action="{!sendEmail}" />
            <apex:commandButton value="Cancel" action="{!objectPage}" />
        </apex:pageBlockButtons>
        -->
        
        <apex:pageMessages id="messages" />
        <apex:pageBlock title="Send Formal Approval Email">
            <apex:pageBlockButtons >
                <apex:commandButton value="Send Email" action="{!sendEmail}" />
                <apex:commandButton value="Cancel" action="{!objectPage}" />
            </apex:pageBlockButtons>
        
        
            <apex:pageBlockSection title="Email Options" columns="1">
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel for="clickApproveSettingSelectList">Select ClickApprove setting</apex:outputLabel>
                    <apex:panelGroup >
                        <apex:selectList value="{!clickApproveSettingSelection}" size="1">
                            <apex:selectOptions value="{!clickApproveSettingOptions}"/>
                            <apex:actionSupport event="onchange" action="{!refreshPage}" />
                        </apex:selectList>
                        
                    </apex:panelGroup>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel for="contactSelectList">{!$Setup.ClickApprove_Constants__c.Contact_Label__c} </apex:outputLabel>
                    <apex:panelGroup id="contactList" >
                        <apex:selectList value="{!contactSelection}" size="1">
                            <apex:selectOptions value="{!contactOptions}"/>
                        </apex:selectList>
                        <br /><apex:commandButton value="Use setting" action="{!clickApproveSettingSelected}" />
                    </apex:panelGroup>
                </apex:pageBlockSectionItem>
    
                <apex:pageBlockSectionItem Rendered="{!RenderCCFields}">
                    <apex:outputLabel for="toAddress">Additional To Addresses</apex:outputLabel>
                    <apex:panelGroup >
                        <apex:inputText value="{!toAddress}" id="toAddress" size="60" />
                    </apex:panelGroup>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem Rendered="{!RenderCCFields}">
                    <apex:outputLabel for="ccAddress">CC </apex:outputLabel>
                    <apex:panelGroup >
                        <apex:inputText value="{!ccAddress}" id="ccAddress" size="60" />
                    </apex:panelGroup>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem Rendered="{!RenderCCFields}">
                    <apex:outputLabel for="bccAddress">Bcc </apex:outputLabel>
                    <apex:panelGroup >
                        <apex:inputText value="{!bccAddress}" id="bccAddress" size="60" />
                    </apex:panelGroup>
                </apex:pageBlockSectionItem>                
            
                <apex:pageBlockSectionItem >
                    <apex:outputLabel for="templateSubject">Subject </apex:outputLabel>
                    <apex:panelGroup >
                        <apex:inputText value="{!templateSubject}" id="templateSubject" disabled="{!If($Setup.ClickApprove_Constants__c.Enable_approval_email_subject_editing__c, false, true)}" size="100" />
                    </apex:panelGroup>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel for="templateBody">Body </apex:outputLabel>
                    <apex:panelGroup >
                        <apex:inputTextArea value="{!templateBody}" id="templateBody" disabled="{!If($Setup.ClickApprove_Constants__c.Enable_approval_email_body_text_editing__c, false, true)}" richText="True" Rows="40" cols="100" />
                    </apex:panelGroup>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            
            <apex:pageBlockSection title="Select Attachments" columns="1" rendered="{!IF($Setup.ClickApprove_Constants__c.Allow_Account_Attachments__c || $Setup.ClickApprove_Constants__c.Allow_Opportunity_Attachments__c,true,false)}">
                <apex:pageBlockSectionItem >
                    <apex:pageBlock >
                    <!-- Table to display the cAttachment records -->
                        <apex:pageBlockTable value="{!attachments}" var="a" id="table" width="100%">
                            <apex:column >
                                <!-- This is our selected Boolean property in our wrapper class -->
                                <apex:inputCheckbox value="{!a.selected}"/>
                            </apex:column>
                            <apex:column value="{!a.attachment.Name}" />
                            <apex:column value="{!a.attachment.LastModifiedDate}" />
                            <apex:column value="{!a.attachment.LastModifiedBy.Name}" />
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            
            <apex:pageBlockSection title="Select Documents" columns="1" rendered="{!$Setup.ClickApprove_Constants__c.Allow_Document_Attachments__c}">
                <apex:pageBlockSectionItem >
                    <apex:pageBlock >
                    <!-- Table to display the cDocument records -->
                        <apex:pageBlockTable value="{!TermsConditionsDocuments}" var="d" id="table" width="100%">
                            <apex:column >
                                <!-- This is our selected Boolean property in our wrapper class -->
                                <apex:inputCheckbox value="{!d.selected}"/>
                            </apex:column>
                            <apex:column value="{!d.document.Name}" />
                             <apex:column value="{!d.document.LastModifiedDate}" />
                             <apex:column value="{!d.document.LastModifiedBy.Name}" />
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            
        </apex:pageBlock>
    </apex:form>
</apex:page>